
@{
    ViewBag.Title = "Index";
}
@section scripts{
    <script src="~/Scripts/src/candidates.js"></script>
}
<h2>Candidates</h2>
<btn class="btn btn-primary" data-bind='click: add'>Add</btn>
<div id="candidates">
    <table class="table table-hover">
        <thead>
            <tr>
                <th>FirstName</th>
                <th>LastName</th>
                <th>Email</th>
                <th>Comment</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: candidates">
            <tr>
                <td><input class='form-control' data-bind='value: FirstName' /></td>
                <td><input class='form-control' data-bind='value: LastName' /></td>
                <td><input class='form-control' data-bind='value: Email' /></td>
                <td><input class='form-control' data-bind='value: Comment' /></td>
                <td><input class='form-control' disabled data-bind='value: Created' /></td>
                <td><btn class="btn btn-success" data-bind='click: $root.save'>Save</btn></td>
                <td><btn class="btn btn-danger" data-bind='click: $root.delete'>Delete</btn></td>
                <td><btn class="btn btn-default" data-bind='click: $root.addNote' data-toggle="modal" data-target="#myModal">Notes</btn></td>

            </tr>
        </tbody>
    </table>
</div>
<div class="modal fade" data-bind="visible: popupDialog" id="myModal">
    <div class="modal-dialog" data-bind="with:popupDialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Notes</h4>
            </div>
            <btn class="btn btn-primary" data-bind='click: addNote'>Add note</btn>
            <div class="modal-body">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>Note</th>
                            <th>Created</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach: Notes">
                        <tr>
                            <td><input class='form-control' data-bind='value: FirstName' /></td>
                            <td><input class='form-control' disabled data-bind='value: Created' /></td>
                            <td><btn class="btn btn-success" data-bind='click: $root.save'>Save</btn></td>
                            <td><btn class="btn btn-danger" data-bind='click: $root.delete'>Delete</btn></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

